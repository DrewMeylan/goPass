package cmd

import (
	"fmt"

	"github.com/spf13/cobra"
)

// createCmd represents the creat command
var createCmd = &cobra.Command{
	Use:   "create",
	Short: "Initialize a new password store.",
	Run: func(cmd *cobra.Command, args []string) {
		toggle, _ := cmd.Flags().GetBool("toggle")
		if toggle {
			fmt.Println("Help goes here")
		} else {
		fmt.Println("create called")
		}
	},
}

var createClusterCmd = &cobra.Command{
	Use:	"cluster",
	Short:	"Cluster management",
	Run: func(cmd *cobra.Command, args []string) {
		fmt.Println("create cluster called")
	},
}

var createLocalCmd = &cobra.Command {
	Use: 	"local",
	Short:	"Local management",
	Run: func(cmd *cobra.Command, args []string) {
		fmt.Println("create local called")
	},
}	



func create() {
	rootCmd.AddCommand(createCmd)
	createCmd.AddCommand(createClusterCmd, createLocalCmd)

	// Here you will define your flags and configuration settings.

	// Cobra supports Persistent Flags which will work for this command
	// and all subcommands, e.g.:
	// createCmd.PersistentFlags().String("foo", "", "A help for foo")

	// Cobra supports local flags which will only run when this command
	// is called directly, e.g.:
	createCmd.Flags().BoolP("toggle", "t", false, "Help message for toggle")
}
